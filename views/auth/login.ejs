<div class="container">
	<div class="row">
		<div class="col-md mt-3 mx-auto">
            <form class="text-center" action="/auth/login" method="post">
                <div class="form-row">
                    <div class="form-group mx-auto col-md-3">
                        <input name="email" type="email" class="form-control" id="email" placeholder="email">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group mx-auto col-md-3">
                        <input name="password" type="password" class="form-control" id="password" placeholder="password">
                    </div>
                </div>
				<button type="submit" class="btn btn-outline-dark" style="background-color:#87D68D;">Log In</button>
			</form>
		</div>
	</div>
</div>