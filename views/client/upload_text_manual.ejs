                        <% }) %>
                    </select>
                </div>
				<div class="form-group">
					<label for="textcontent">Texts to upload:</label>
					<textarea name="textContents[]" class="form-control mt-3" id="exampleFormControlTextarea1"
						rows="3"></textarea>
					<textarea name="textContents[]" class="form-control mt-3" id="exampleFormControlTextarea1"
						rows="3"></textarea>
				</div>
